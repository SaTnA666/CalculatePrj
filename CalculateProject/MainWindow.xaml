<Window x:Class="CalculateProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculateProject"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Калькулятор" Height="450" Width="800" FontFamily="Trebuchet MS" Icon="ICOWindows.png">
    <Grid>

        <StackPanel VerticalAlignment="Center" >
        <Button x:Name="PhisicButton" Content="Физика" HorizontalAlignment="Left" Margin="350,320,0,0" VerticalAlignment="Top" Width="109" Click="PhisicName_Click" FontFamily="Trebuchet MS"/>
        <Button x:Name="AnimationButton" Content="Привет!" HorizontalAlignment="Left" Margin="350,202,0,0" VerticalAlignment="Top" Width="109" Click="AnimationButton_Click" FontFamily="Trebuchet MS"/>
        <Button x:Name="Exit" Content="Выход" HorizontalAlignment="Left" Margin="10,392,0,0" VerticalAlignment="Top" Width="75" Click="Exit_Click"/>
         </StackPanel>
        </Grid>
</Window>
